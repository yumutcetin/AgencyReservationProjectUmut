@model RezerVanaUmv.Models.RewardCatalog

@{
    ViewData["Title"] = "Edit";
}

<h1>@RezerVanaUmv.Resources.Resource.Edit</h1>

<h4>@RezerVanaUmv.Resources.Resource.RewardCatalog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TenantId" class="control-label"></label>
                <select asp-for="TenantId" class="form-control" asp-items="ViewBag.TenantId" required></select>
            </div>
            <div class="form-group">
                <label asp-for="RequiredPoints" class="control-label">@RezerVanaUmv.Resources.Resource.Gerekli_Puan</label>
                <input asp-for="RequiredPoints" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="IsActive" class="control-label">@RezerVanaUmv.Resources.Resource.Aktif?</label>
                <input asp-for="IsActive" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label">@RezerVanaUmv.Resources.Resource.Oluşturulma_Tarihi</label>
                <input asp-for="CreatedAt" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="RoomType" class="control-label">@RezerVanaUmv.Resources.Resource.Oda_Tipi</label>
                <input asp-for="RoomType" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">@RezerVanaUmv.Resources.Resource.Start_Date</label>
                <input asp-for="StartDate" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">@RezerVanaUmv.Resources.Resource.End_Date</label>
                <input asp-for="EndDate" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="UseEarningPeriod" class="control-label">@RezerVanaUmv.Resources.Resource.Kazanç_Dönemi_Kullanılsın</label>
                <input asp-for="UseEarningPeriod" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="@RezerVanaUmv.Resources.Resource.KAYDET" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@RezerVanaUmv.Resources.Resource.Listeye_Geri</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

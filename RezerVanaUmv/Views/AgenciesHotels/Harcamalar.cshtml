@model IEnumerable<RezerVanaUmv.ViewModels.ReservationWithUserViewModel>

@{
    ViewData["Title"] = "Harcama Rezervasyonları";
    Layout = "~/Views/PageViews/UserLayout.cshtml";
}

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css" />

<h1>@RezerVanaUmv.Resources.Resource.Harcama_Rezervasyonları</h1>

<style>
    /* Tabloyu ekrana sığdır (scroll yok) */
    #reservationTable {
        font-size: 0.80rem; /* biraz küçük yazı */
        table-layout: fixed; /* sütun genişliklerini sabitle */
        width: 100%;
    }

        #reservationTable th,
        #reservationTable td {
            padding: 4px 6px;
            white-space: normal; /* gerekirse alta insin */
            word-wrap: break-word; /* uzun kelimeleri böl */
        }

            /* Kısa kolonları ortala (puan, durum, işlem) */
            #reservationTable th:nth-child(9),
            #reservationTable td:nth-child(9),
            #reservationTable th:nth-child(11),
            #reservationTable td:nth-child(11),
            #reservationTable th:nth-child(12),
            #reservationTable td:nth-child(12) {
                text-align: center;
            }

                /* İşlem butonlarını biraz sıkılaştır */
                #reservationTable td:nth-child(12) .btn {
                    margin-bottom: 2px;
                    padding: 2px 6px;
                    font-size: 0.75rem;
                }
</style>

<table id="reservationTable" class="table table-bordered table-hover" style="width:100%">
    <thead>
        <tr>
            <th>@RezerVanaUmv.Resources.Resource.Kayıt_Tarihi</th>
            <th>@RezerVanaUmv.Resources.Resource.Ajans_Adı</th>
            <th>@RezerVanaUmv.Resources.Resource.Kullanıcı</th>
            <th>@RezerVanaUmv.Resources.Resource.Ülke</th>
            <th>@RezerVanaUmv.Resources.Resource.Şehir</th>
            <th>@RezerVanaUmv.Resources.Resource.Misafir_Adı</th>
            <th>@RezerVanaUmv.Resources.Resource.BAŞLANGIÇ_TARİHİ</th>
            <th>@RezerVanaUmv.Resources.Resource.BİTİŞ_TARİHİ</th>
            <th>@RezerVanaUmv.Resources.Resource.Puan</th>
            <th>@RezerVanaUmv.Resources.Resource.Oda_Tipi</th>
            <th>@RezerVanaUmv.Resources.Resource.Durum</th>
            <th>@RezerVanaUmv.Resources.Resource.İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td data-order="@(item.Reservation.ReservationDate?.ToString("yyyy-MM-dd"))">
                    @(item.Reservation.ReservationDate?.ToString("dd-MM-yyyy"))
                </td>
                <td>@item.Reservation.Agency?.Name</td>
                <td>@item.UserName</td>
                <td>@item.Reservation.Agency?.Ulke</td>
                <td>@item.Reservation.Agency?.Sehir</td>
                <td>
                    @string.Join(", ", item.Reservation.Passengers.Select(p => (p.FirstName ?? "") + " " + (p.LastName ?? "")))
                </td>
                <td data-order="@(item.Reservation.CheckinDate?.ToString("yyyy-MM-dd"))">
                    @(item.Reservation.CheckinDate?.ToString("dd-MM-yyyy"))
                </td>
                <td data-order="@(item.Reservation.CheckoutDate?.ToString("yyyy-MM-dd"))">
                    @(item.Reservation.CheckoutDate?.ToString("dd-MM-yyyy"))
                </td>
                <td>@item.Reservation.TotalAmount</td>
                <td>@item.Reservation.RoomType</td>
                <td>@item.Reservation.Status</td>
                <td>
                    @if (item.Reservation.Status == "Pending")
                    {
                        <a asp-action="SetAcquired" asp-route-id="@item.Reservation.Id" class="btn btn-danger btn-sm">
                            Puan Onayla
                        </a>
                    }

                    <a asp-action="EditHarcamalar" asp-route-id="@item.Reservation.Id" class="btn btn-sm btn-primary">
                        @RezerVanaUmv.Resources.Resource.Edit
                    </a>

                    <a asp-action="DeleteHarcamalar" asp-route-id="@item.Reservation.Id" class="btn btn-sm btn-danger">
                        @RezerVanaUmv.Resources.Resource.Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.colVis.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

    <script>
        $(document).ready(function () {
            $('#reservationTable').DataTable({
                dom: 'Bfrtip',
                scrollX: true,
                autoWidth: false,
                responsive: true,
                order: [[0, 'desc']],
                stateSave: true,
                stateDuration: -1,
                stateLoadParams: function (settings, data) {
                    var navigationType = performance.getEntriesByType("navigation")[0].type;
                    if (navigationType !== 'back_forward') {
                        return false;
                    }
                },
                buttons: [
                    'copy', 'excel', 'pdf', 'print'
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json'
                }
            });
        });
    </script>
}

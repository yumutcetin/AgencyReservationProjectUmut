@model RezerVanaUmv.Models.Operator

@{
    ViewData["Title"] = "Operatör Güncelle";
    Layout = "~/Views/PageViews/UserLayout.cshtml";
}

<h2 class="mb-4">✏️ @RezerVanaUmv.Resources.Resource.Operatör_Düzenle</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="TenantId" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">@RezerVanaUmv.Resources.Resource.Operatör_Adı</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CreatedAt" class="form-label">@RezerVanaUmv.Resources.Resource.Oluşturulma_Tarihi</label>
                        <input asp-for="CreatedAt" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label asp-for="UpdatedAt" class="form-label">@RezerVanaUmv.Resources.Resource.Güncellenme_Tarihi</label>
                        <input asp-for="UpdatedAt" class="form-control" readonly />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> @RezerVanaUmv.Resources.Resource.KAYDET
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-link">
                <i class="bi bi-arrow-left"></i> @RezerVanaUmv.Resources.Resource.Listeye_Geri
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model RezerVanaUmv.Models.Operator

@{
    ViewData["Title"] = "Operatör Detayları";
    Layout = "~/Views/PageViews/UserLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<h2 class="mb-4">🔍 @RezerVanaUmv.Resources.Resource.Operatör_Detayları</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@RezerVanaUmv.Resources.Resource.Operatör_Adı</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">@RezerVanaUmv.Resources.Resource.Oluşturulma_Tarihi</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd-MM-yyyy HH:mm")</dd>

            <dt class="col-sm-3">@RezerVanaUmv.Resources.Resource.Güncellenme_Tarihi</dt>
            <dd class="col-sm-9">@Model.UpdatedAt.ToString("dd-MM-yyyy HH:mm")</dd>

            <dt class="col-sm-3">Tenant ID</dt>
            <dd class="col-sm-9">@Model.Tenant?.Id</dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> @RezerVanaUmv.Resources.Resource.Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> @RezerVanaUmv.Resources.Resource.Listeye_Geri
            </a>
        </div>
    </div>
</div>

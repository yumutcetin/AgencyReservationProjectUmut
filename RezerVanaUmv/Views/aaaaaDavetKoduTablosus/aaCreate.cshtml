@model RezerVanaUmv.Models.DavetKoduTablosu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/PageViews/UserLayout.cshtml";
}
@if (!ViewData.ModelState.IsValid)
{
    foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="alert alert-danger">@error.ErrorMessage</div>
    }
}
<h1>@RezerVanaUmv.Resources.Resource.Davet_Kodu_Oluştur</h1>
<h4>@RezerVanaUmv.Resources.Resource.Davet_Kodu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Davet Kodu - sadece görüntüleme amaçlı -->
            <div class="form-group">
                <label asp-for="Email" class="control-label">@RezerVanaUmv.Resources.Resource.EPosta</label>
                <input asp-for="Email" class="form-control" required />
            </div>

            <!-- TenantId - gizli -->
            <input asp-for="TenantId" type="hidden" />

            <!-- AgencyId - gizli (acenta daha sonra belirleyecek) -->
            <input asp-for="AgencyId" type="hidden" />

            <div class="form-group mt-3">
                <input type="submit" value="@RezerVanaUmv.Resources.Resource.Kayıt" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">@RezerVanaUmv.Resources.Resource.Listeye_Geri</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

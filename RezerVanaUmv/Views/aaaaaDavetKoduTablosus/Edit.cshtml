@model RezerVanaUmv.Models.DavetKoduTablosu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/PageViews/UserLayout.cshtml";
}

<h1>@RezerVanaUmv.Resources.Resource.Edit</h1>

<h4>@RezerVanaUmv.Resources.Resource.Davet_Kodu_Tablosu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DavetKodu" class="control-label">@RezerVanaUmv.Resources.Resource.Davet_Kodu</label>
                <input asp-for="DavetKodu" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="TenantId" class="control-label"></label>
                <input asp-for="TenantId" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="AgencyId" class="control-label">@RezerVanaUmv.Resources.Resource.Ajans ID</label>
                <input asp-for="AgencyId" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="@RezerVanaUmv.Resources.Resource.Kayıt" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@RezerVanaUmv.Resources.Resource.Listeye_Geri</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

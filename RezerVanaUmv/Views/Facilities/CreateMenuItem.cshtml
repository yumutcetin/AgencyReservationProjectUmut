@model RezerVanaUmv.Models.MenuItem

@{
    ViewData["Title"] = "Menü Öğesi Ekle";
    Layout = "~/Views/PageViews/UserLayout.cshtml";
    var facilities = ViewBag.Facilities as IEnumerable<dynamic>;
}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var menuSelect = document.getElementById('MenuItemSelect');
        menuSelect.addEventListener('change', function() {
            var selectedOption = this.options[this.selectedIndex];
            var uuid = selectedOption.dataset.uuid || ""; // get the real UUID
            document.getElementById('MenuItemId').value = uuid;
            console.log("MenuItemId set to:", uuid);
        });
    });
</script>

<h1>Yeni Menü Öğesi Ekle</h1>
<hr />

<form asp-action="CreateMenuItem" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label">Ad</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="control-label"> @RezerVanaUmv.Resources.Resource.Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="control-label"> @RezerVanaUmv.Resources.Resource.Fiyat</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label asp-for="FacilityId" class="control-label"> @RezerVanaUmv.Resources.Resource.Tesis</label>
        <select asp-for="FacilityId" class="form-control" required>
            <option value="">-- Tesis Seçin --</option>
            @if (facilities != null)
            {
                foreach (var facility in facilities)
                {
                    <option value="@facility.Id">@facility.Name</option>
                }
            }
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success"> @RezerVanaUmv.Resources.Resource.KAYDET</button>
        <a asp-action="GetMenu" class="btn btn-secondary"> @RezerVanaUmv.Resources.Resource.Listeye_Geri </a>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

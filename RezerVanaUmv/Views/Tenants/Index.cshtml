@model IEnumerable<RezerVanaUmv.Models.Tenant>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/PageViews/UserLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">@RezerVanaUmv.Resources.Resource.Yeni_Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subdomain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subdomain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LogoUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">@RezerVanaUmv.Resources.Resource.Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">@RezerVanaUmv.Resources.Resource.Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@RezerVanaUmv.Resources.Resource.Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>

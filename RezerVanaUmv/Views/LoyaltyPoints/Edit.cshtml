@model RezerVanaUmv.Models.LoyaltyPoint

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/PageViews/UserLayout.cshtml";
}

<h1>@RezerVanaUmv.Resources.Resource.Edit</h1>

<h4>@RezerVanaUmv.Resources.Resource.LoyaltyPoint</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TenantId" class="control-label"></label>
                <select asp-for="TenantId" class="form-control" asp-items="ViewBag.TenantId" required></select>
            </div>
            <div class="form-group">
                <label asp-for="ReservationId" class="control-label"></label>
                <select asp-for="ReservationId" class="form-control" asp-items="ViewBag.ReservationId" required></select>
            </div>
            <div class="form-group">
                <label asp-for="AgencyId" class="control-label"></label>
                <select asp-for="AgencyId" class="form-control" asp-items="ViewBag.AgencyId" required></select>
            </div>
            <div class="form-group">
                <label asp-for="BasePoints" class="control-label"></label>
                <input asp-for="BasePoints" class="form-control" required />
                <span asp-validation-for="BasePoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BonusPoints" class="control-label"></label>
                <input asp-for="BonusPoints" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="CalculatedAt" class="control-label"></label>
                <input asp-for="CalculatedAt" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@RezerVanaUmv.Resources.Resource.Listeye_Geri</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
